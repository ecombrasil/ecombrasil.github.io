@import 'resources'
@import 'fonts'

font = 'Gilroy'
text-color = #111

*
  margin 0
  padding 0

  &:focus
  &:active
    outline 0

html
  scroll-behavior smooth

html
body
  width 100%
  height 100vh

body
  overflow-y auto
  font-family font
  font-size 62.5%
  color text-color

a
  color inherit
  text-decoration none

textarea
  font-family font
  color text-color
  border none